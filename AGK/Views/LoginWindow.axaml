<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
        x:Class="AGK.Views.LoginWindow"
        Title="LoginWindow"
		Width="700" Height="450"
		WindowStartupLocation="CenterScreen">
	<StackPanel>
		<TextBlock Text="Логин" FontSize="30" HorizontalAlignment="Center" Margin="25" VerticalAlignment="Center"/>
		<TextBox Text="{Binding	Login}" FontSize="30" Width="500"/>
		<TextBlock Text="Пароль" FontSize="30" HorizontalAlignment="Center" Margin="25" VerticalAlignment="Center"/>
		<TextBox Text="{Binding	Password}" FontSize="30" Width="500" PasswordChar="*"/>
		<Button Command="{Binding AuthCommand}" Content="Вход" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="30" FontSize="25" Width="150" Height="60"/>
		<TextBlock FontSize="25" Text="{Binding	Message}" Margin="5" HorizontalAlignment="Center"/>
	</StackPanel>
</Window>
